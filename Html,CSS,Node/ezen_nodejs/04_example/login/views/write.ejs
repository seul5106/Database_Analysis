                    <input type="text" class="form-control" placeholder="글 제목" name="title">
                </div>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" style="height: 300px" name="content"></textarea>
                    <label for="floatingTextarea2">내용</label>
                </div>
                <div align="center">
                    <input type="submit" value="글쓰기" class="btn btn-primary btn-lg">
                </div>
            </form>
        </div>
    </body>
