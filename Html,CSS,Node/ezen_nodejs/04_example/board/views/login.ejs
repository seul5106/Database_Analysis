      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <script>
      function signup(){
        location.href="/signup";
      }
    </script>
    <script>
        $(function(){
            $("#signin").attr("disabled", "disabled");
            $("#danger").hide();
            $("input").keyup(function(){
                var id = $("#input_id").val();
                var password = $("#input_password").val();
                var length = password.length;
                if(id && password){
                    if(length >= 4){
                        $("#signin").removeAttr("disabled");
                        $("#danger").hide();
                    }else{
                        $("#signin").attr("disabled", "disabled");  
                        $("#danger").show()
                    }
                }else{
                    $("#signin").attr("disabled", "disabled");
                    $("#danger").show()
                }
            })
            
        })
    </script>

    
    <!-- Custom styles for this template -->
    <link href="./css/signin.css" rel="stylesheet">
    <%- include("./head.ejs") %>
  </head>
  <body class="text-center">
    <%- include("./nav.ejs") %>
    
<main class="form-signin">
  <form action="/login" method="POST">
    <img class="mb-4" src="./img/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="input_id" placeholder="ID" name="post_id">
      <label for="floatingInput">ID</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="input_password" placeholder="Password" name="password">
      <label for="floatingPassword">Password</label>
    </div>
    
    <div class="alert alert-danger" id="danger">패스워드는 4자리 이상입니다.</div>

    <button class="w-100 btn btn-lg btn-success" type="submit" id="signin">Sign in</button>
  </form>
  <button style="margin-top: 10px;" class="w-100 btn btn-lg btn-primary" onclick="signup()">Sign up</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
</main>


    
